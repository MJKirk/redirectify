{

  "manifest_version": 2,
  "name": "Redirectify",
  "version": "0.2.4",

  "description": "Redirects requests for PDFs of papers at some popular sites to their corresponding HTML index pages.",

  "homepage_url": "https://github.com/imurray/redirectify",

  "permissions": [
    "*://*.arxiv.org/pdf/*",
    "*://xxx.lanl.gov/pdf/*",
    "webRequest",
    "webRequestBlocking"
  ],

  "background": {
    "scripts": ["redirectify.js"]
  }

}
